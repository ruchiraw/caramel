<%
(function () {
    var config = component.config('theme');
    var theme = config.active;
    var path = '/themes/' + theme + '/css/styles.css';
    var file = new File(path);
    if (file.isExists()) {
        try {
            file.open('r');
            print('<style type="text/css">');
            print(file.readAll());
            print('</style>');
        } finally {
            file.close();
        }
    }
}());
%>