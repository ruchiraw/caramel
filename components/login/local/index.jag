<form class="form-signin" role="form" action="/caramel/components/login/local/login" method="post">
    <h2 class="form-signin-heading">Please sign in</h2>
    <input type="text" name="username" class="form-control username" placeholder="Email address" required autofocus>
    <input type="password" name="password" class="form-control password" placeholder="Password" required>
    <label class="checkbox">
        <input type="checkbox" value="remember-me"> Remember me
    </label>
    <button class="btn btn-lg btn-primary btn-block signin" type="submit">Sign in</button>
</form>